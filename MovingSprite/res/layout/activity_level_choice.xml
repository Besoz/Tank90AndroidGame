<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/level_choice"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LevelChoice" >

    <!--  -->

    <Button
        android:id="@+id/level10"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/level5"
        android:layout_alignBottom="@+id/level5"
        android:layout_alignLeft="@+id/level9"
        android:background="@drawable/button_level"
        android:textSize="10dp"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/level7"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/level2"
        android:layout_alignBottom="@+id/level2"
        android:layout_alignLeft="@+id/level6"
        android:background="@drawable/button_level"
        android:textSize="10dp" 
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/level9"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/level8"
        android:layout_below="@+id/level8"
        android:background="@drawable/button_level"
        android:textSize="10dp" 
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/level2"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/level1"
        android:layout_below="@+id/level1"
        android:background="@drawable/button_level"
        android:textSize="10dp"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/level3"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/level2"
        android:layout_below="@+id/level2"
        android:background="@drawable/button_level"
        android:textSize="10dp"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/level8"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/level3"
        android:layout_alignBottom="@+id/level3"
        android:layout_alignLeft="@+id/level7"
        android:background="@drawable/button_level"
        android:textSize="10dp"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/level4"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/level3"
        android:layout_alignTop="@+id/level9"
        android:background="@drawable/button_level"
        android:textSize="10dp"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/level5"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/level4"
        android:layout_below="@+id/level4"
        android:background="@drawable/button_level"
        android:textSize="10dp" 
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/level6"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/level1"
        android:layout_alignBottom="@+id/level1"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_level"
        android:textSize="10dp" 
        android:textColor="@android:color/white"/>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/choose_level"
         />

    <Button
        android:id="@+id/level1"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_toRightOf="@+id/imageView1"
        android:background="@drawable/button_level"
        android:textColor="@android:color/white"
        android:textSize="10dp" />

</RelativeLayout>